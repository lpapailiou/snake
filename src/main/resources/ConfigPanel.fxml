<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox fx:id="configPanel" alignment="CENTER" spacing="10" prefHeight="500.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ConfigPanel">
    <children>
      <HBox spacing="20" prefHeight="31.0" prefWidth="500.0">
         <children>
            <TextField fx:id="boardWithControl" text="[board width]" />
            <TextField fx:id="boardHeightControl" text="[board height]" />
            <Region prefHeight="200.0" prefWidth="200.0" />
            <ComboBox fx:id="colorSchemeChooser" prefWidth="250.0" />
         </children>
      </HBox>
      <HBox prefHeight="18.0" prefWidth="500.0">
         <children>
            <Slider />
         </children>
      </HBox>
      <HBox spacing="20" prefHeight="28.0" prefWidth="500.0">
         <children>
            <ComboBox fx:id="modeChooser" prefWidth="310.0" />
         </children>
      </HBox>
        <HBox fx:id="layerConfig" spacing="20">
         <children>
            <ComboBox fx:id="hiddenLayerCount" prefWidth="100.0" />
            <TextField fx:id="hiddenLayer0" prefWidth="50.0" />
            <TextField fx:id="hiddenLayer1" prefWidth="50.0" />
            <TextField fx:id="hiddenLayer2" prefWidth="50.0" />
            <TextField fx:id="hiddenLayer3" prefWidth="50.0" />
         </children></HBox>
        <StackPane fx:id="netConfig">
           <children>
               <Pane fx:id="layerVizualiser" />
               <VBox fx:id="inputNodeConfig" alignment="CENTER_LEFT" spacing="2">
               <children>
                   <RadioButton fx:id="node0" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node1" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node2" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node3" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node4" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node5" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node6" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node7" mnemonicParsing="false" selected="true" text="" />
                   <RadioButton fx:id="node8" mnemonicParsing="false" selected="true" text="" />
               </children>
            </VBox>
           </children>
        </StackPane>
      <HBox fx:id="genConfig" spacing="20" prefHeight="33.0" prefWidth="100.0">
         <children>
            <TextField fx:id="generationCount" text="1" />
            <TextField fx:id="populationSize" text="1" />
            <TextField fx:id="learningRate" text="0.1" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="31.0" prefWidth="500.0" spacing="20">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" text="start" />
            <Button mnemonicParsing="false" text="statistics" />
         </children></HBox>
    </children>

</VBox>
